<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <p id="error-explanation"><%= @note.errors.count %>件のエラーがあります。</p>
    
    <ul>
    <% @note.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  ユーザーID
  <%= f.collection_select :user_id, User.all, :id, :id, {prompt: true}, {class: "form-control"} %>

  タイトル
  <%= f.text_field :title, class: "form-control title-field" %>

  内容
  <%= f.text_area :content, class: "form-control content-field" %>

  <%= f.submit '保存', class: "btn primary-btn" %>
<% end %>